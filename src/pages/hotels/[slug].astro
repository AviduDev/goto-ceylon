---
import Layout from "@/layouts/Layout.astro";

interface Hotel {
  slug: string;
  name: string;
  hotel: any;
}

export async function getStaticPaths() {
  const response = await fetch(import.meta.env.HYGRAPH_ENDPOINT, {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      Accept: "application/json",
    },
    body: JSON.stringify({
      query: ` {
        hotels {
            name
            slug
        }
        }
        `,
    }),
  });

  const json = await response.json();

  const paths = json.data.hotels.map((hotel: { slug: string }) => ({
    params: { slug: hotel.slug },
    props: { hotel },
  }));

  return paths;
}

const { hotel }: Hotel = Astro.props;
---

<Layout title={`${hotel.name} | Goto Ceylon`} >
  <h1 class="font-bold text-6xl text-center">{hotel.name}</h1>
</Layout>
